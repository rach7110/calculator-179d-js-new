<html>
	<head>
		<title>179D Calculator</title>

		<link rel="stylesheet" href="style.css" />
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		<script type="text/javascript" src="calculator.js"></script>

		<!-- Viewport Meta Tag: This enables use of media queries for cross-device layouts -->
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>
	<body>
		<div class="container">
<!-- Header and logo -->
			<div class="row header">
				<img src="logo.png">
			</div>
<!-- Banner image -->
			<div class="row banner">
				<img src="banner2.jpg">
			</div>
			<div class="main">
<!-- Calculator title -->
				<div class="row">
					<div class="column full" id="calculator-title">
						<strong><h3>179D Tax Estimation &nbsp;&nbsp;&gt;&nbsp</strong>Energy Efficient Buildings
					</div>
				</div>
				<div class="inner">
<!-- ***************** User Inputs***************** -->
					<div id="user-inputs">
<!-- Inputs Title -->
						<div class="row">
							<div class="column full" id="inputs-title">
								<strong>Please fill in the inputs:</strong>
							</div>
						</div>
<!-- Name field -->
						<div class="row">
							<label for="name" class="column one-third">Enter your Name:</label>
							<div class="column one-fifth"></div>
							<input class="column one-fifth" type="text" id="name">
							<div class="column one-fifth"></div>
						</div>
<!-- Building size field -->
						<div class="row">
							<label for="building-size" class="column one-third">Building's size (sqft):</label>
							<div class="column one-fifth"></div>
							<input class="column one-fifth" type="text" id="building-size" value="100000">
							<div class="column one-fifth"></div>
						</div>
<!-- Building type dropdown menu -->
<!-- 						<div class="row">
							<label for="building-type" class="column one-third">Building Type:<input list="building-types" value="menu list"/></label>
							<div class="column one-fifth"></div>
                            <datalist class="column one-fifth" id="building-types">
                                <option value="Government">
                                <option value="Commercial">
                                <option value="Residential">
                            </datalist>
							<div class="column one-fifth"></div>
						</div> -->
<!--Energy efficiceny selection boxes: -->
						<div class="row" id="energy-type">
							<div class="column one-third">
								<p>Efficient Lighting?</p>
								<img src="lighting.jpg">
								<input type="checkbox" id="lighting" style="width: 200px;">
							</div>
							<div class="column one-third">
								<p>Efficient HVAC?</p> 
								<img src="hvac.jpg"> 
								<input type="checkbox" id="hvac" style="width: 200px;">
							</div>
							<div class="column one-third">
								<p>Efficient Envelope?</p> 
								<img src="envelope.jpg">
								<input type="checkbox" id="env" style="width: 200px;">
							</div>
						</div>

                        <!-- Submit button: -->
                    <div class="row" id="submit">
                        <input id="submit-button" type="submit" >
                    </div>

					</div>
<!--***************** User Results: *****************-->
					<div id="user-results">
					<!-- Results Title -->
						<div class="row">
							<div class="column full" id="results-title">
								<h3>Tax Deduction Estimation:</h3>
							</div>
						</div>
						<!-- BUILDING SIZE -->
						<div class="row">
                            <div class="column one-third">Building size:</div>
                            <div class="column one-third"></div>
                            <div class="column one-third" id="size-result"></div>              
            			</div>

                        <div class="row">
                            <div class="column half" style="font-size: 10px">x&nbsp;total deduction per sq.ft.</div>
                            <div class="column one-third"></div>
                            <div class="column one-third"></div>              
                        </div>

                        <!-- Line Item 2 -->
                        <div class="row">
                            <div class="column half">Efficient Systems:</div>
                        <!--               <div class="column one-third"></div>
                        <div class="column one-third" id="cell-value">(answer)</div>  -->             
                        </div>
                        <!-- Line Item 3 -->
                        <div class="row">
                            <div class="column half">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Efficient Lighting</div>
                            <div class="column one-third"></div>
                            <div class="column one-third" id="cell-value">$0.60</div>              
                        </div>
                        <!-- Line Item 4 -->
                        <div class="row">
                            <div class="column half">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Efficient HVAC:</div>
                            <div class="column one-third"></div>
                            <div class="column one-third" id="cell-value">$0.60</div>              
                        </div>
                        <!-- Line Item 5 -->
                        <div class="row">
                            <div class="column half">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Efficient Envelope:</div>
                            <div class="column one-third"></div>
                            <div class="column one-third" id="cell-value">$0.60</div>              
                        </div>
                        <!-- Line Item 6 -->
                        <div class="row">
                            <div class="column half"><strong>Total Tax Benefit:</strong></div>
                            <div class="column one-third"></div>
                            <div class="column one-third" id="benefit-result"></div>              
                        </div>
                    </div>

                    <div id="footer">
                    </div>

	</body>
</html>
